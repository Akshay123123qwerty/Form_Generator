{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",  
    "skipLibCheck": true,
    "types": ["node", "react", "@playwright/test"]
  },
  "include": [
    "src/**/*.ts",
    "playwright.config.ts",
    "tests/**/*.ts"
  ]
}
